<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new cocktail</h1>

      <%= form_for @cocktail do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.button :submit, class: 'new-button' %>
      <% end %>
    </div>
  </div>
</div>
