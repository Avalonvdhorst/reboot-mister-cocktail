<div class="show-header" style="background-image: url('https://images.unsplash.com/photo-1511715112108-9acc6c3ff61f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1200&q=80')">
  <%= link_to "<i class='fas fa-glass-martini-alt'></i>".html_safe, root_path %>
  <h3><%= link_to 'Add Ingredients', new_cocktail_dose_path(@cocktail.id), class: "add-button" %></h3>
  <div class="ing-list">
    <h2>Ingredients:</h2>
    <% @cocktail.doses.each do |dose| %>
      <div class="d-flex">
        <p> - <%= dose.description %> <%= dose.ingredient.name %> </p>
        <p><%= link_to '<i class="fas fa-dumpster"></i>'.html_safe, dose_path(dose), {method: :delete} %></p>
      </div>
    <% end %>
  </div>
  <h3 class="cocktail-name"><%= @cocktail.name %></h3>
</div>

